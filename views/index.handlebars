<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>D.R.I.V.</h2>

          <form>
            <div class="row">
              <div class="col-3">
                <div class="form-group">
                  <h5>Choose Referral Type</h5>
                  <label for="referral-type">Referral Type</label>
                  <select class="form-control" id="referral-type">
                    <option>Referred donors</option>
                    <option>Missed potential donors</option>
                  </select>
                </div>
              </div>
              <div class="col-3">
                <h5>Choose Age</h5>
                <div class="form-group">
                  <label for="min-age-input" class="col-2 col-form-label">Minimum age</label>
                    <input class="form-control" type="number" value="" id="min-age-input">
                </div>
                <div class="form-group">
                  <label for="max-age-input" class="col-2 col-form-label">Maximum age</label>
                    <input class="form-control" type="number" value="" id="max-age-input">
                </div>
              </div>
              <div class="col-3">
                <div class="form-check" id="hospitals">
                  <h5>Choose Hospital</h5>
                  {{!-- <input class="form-check-input" type="checkbox" value="" id="example">
                  <label class="form-check-label" for="hospitals">
                    Default checkbox
                  </label> --}}
                </div>
              </div>
              <div class="col-3">
                <div class="form-check" id="needs-followup">
                  <h5>Follow-up</h5>
                  <input class="form-check-input" type="checkbox" value="" id="needs-followup">
                  <label class="form-check-label" for="needs-followup">
                    Include cases that need follow-up
                  </label>
                </div>
              </div>
            <button id="submit" class="btn btn-primary float-right">Submit</button>
          </div>
        </form>
        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

